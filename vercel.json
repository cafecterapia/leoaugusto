{
  "functions": {
    "api/hero-image.rs": {
      "runtime": "vercel-rust@4.0.0",
      "regions": ["all"],
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/hero-image",
      "destination": "/api/hero-image"
    },
    {
      "source": "/images/hero-photo.avif",
      "destination": "/api/hero-image?format=avif&q=90"
    }
  ],
  "headers": [
    {
      "source": "/api/hero-image",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, s-maxage=31536000, immutable"
        },
        {
          "key": "X-Edge-Runtime",
          "value": "rust"
        },
        {
          "key": "Cross-Origin-Resource-Policy",
          "value": "cross-origin"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/hero-image-warmup",
      "schedule": "0 */6 * * *"
    }
  ]
}
